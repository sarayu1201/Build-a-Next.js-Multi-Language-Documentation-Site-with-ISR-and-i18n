{
  "openapi": "3.0.0",
  "info": {
    "title": "Docs Portal API",
    "version": "1.0.0",
    "description": "Sample API documentation for the Docs Portal"
  },
  "servers": [
    {
      "url": "https://api.example.com"
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "summary": "Get all users",
        "responses": {
          "200": {
            "description": "List of users",
            "content": {
              "application/json": {
                "example": [
                  {
                    "id": 1,
                    "name": "John Doe"
                  }
                ]
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "Get user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User details",
            "content": {
              "application/json": {
                "example": {
                  "id": 1,
                  "name": "John Doe"
                }
              }
            }
          }
        }
      }
    }
  }
}
